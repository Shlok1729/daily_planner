<?xml version="1.0" encoding="utf-8"?>
<!--
  Device admin configuration for advanced app blocking
  Provides additional permissions for stricter app control
-->
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <limit-password />
        <watch-login />
        <reset-password />
        <force-lock />
        <wipe-data />
        <expire-password />
        <encrypted-storage />
        <disable-camera />
    </uses-policies>

    <!-- Admin metadata -->
    <meta-data
        android:name="android.app.device_admin.description"
        android:resource="@string/device_admin_description" />
</device-admin>

    <!-- Note: You'll need to add this string to your strings.xml file:
        <string name="device_admin_description">Daily Planner uses device admin permissions to provide enhanced app blocking capabilities during focus sessions. This ensures apps stay blocked even if users try to force-stop the service.</string>
    -->